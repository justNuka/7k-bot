# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
GUILD_ID=your_guild_id_here
ROLE_OFFICIERS_ID=your_officers_role_id

# Channels IDs
ANNOUNCE_CHANNEL_ID=channel_for_bot_announcements
RESSOURCES_CHANNEL_ID=channel_for_resources
CR_LOGS_CHANNEL_ID=channel_for_cr_logs
INFOS_ANNONCES_JEU_CHANNEL_ID=channel_for_game_announcements

# Dashboard API
DASH_API_KEY=generate_a_random_secret_key
DASH_PORT=8787
DASH_HOST=127.0.0.1

# Database
SQLITE_PATH=/home/<USER>/data/bot.db
# Or for local dev:
# DB_DIR=src/data

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Cron Configuration
SCRAPE_CRON=0 * * * *
CR_WEEKLY_RESET_CRON=0 2 * * 1
RESET_CRON_TZ=Europe/Paris

# Optional: Deploy webhook for notifications
DEPLOY_WEBHOOK_URL=your_discord_webhook_url_for_deploy_notifications

# Optional: GitHub webhook (si tu utilises webhook-server.js au lieu de GitHub Actions)
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
WEBHOOK_PORT=9000
